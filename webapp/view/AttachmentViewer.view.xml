<mvc:View controllerName="de.blogspot.openui5.fc.controller.BaseController" xmlns:core="sap.ui.core"
	xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page showHeader="false">
		<l:BlockLayout background="Light">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell width="4" title="Attachment Viewer">
					<Text text="The Attachment Viewer plugin enhances the viewing of an attachment within a WebView."/>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell titleAlignment="Center">
					<core:Icon src="sap-icon://attachment"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell>
					<l:VerticalLayout>
						<Button icon="sap-icon://pdf-attachment" text="SAP Fiori Client User Guide.pdf" type="Emphasized"
							data:url="./pdf/SAP_Fiori_Client_User_Guide.pdf" press="onNavTo"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>